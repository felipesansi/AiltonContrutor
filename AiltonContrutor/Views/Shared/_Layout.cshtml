@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Casa Fácil EPS</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <link rel="stylesheet" href="~/CasaFacilEPS.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico?v=2" />

        <!-- BUSCAS -->
        <meta name="description" content="Construa sua casa com a gente utilizando painéis de EPS, oferecendo modernidade, economia e sustentabilidade. Confira os imóveis disponíveis!">
        <meta name="keywords" content="construção, casa EPS, imóveis, construção sustentável, painéis monolíticos, baixo custo, eficiência energética">
        <meta name="robots" content="index, follow">
        <meta name="author" content="AiltonConstrutor">

         <!--WHATSAPP-->
        <meta property="og:title" content="Casa Fácil EPS - Construa com Eficiência">
        <meta property="og:description" content="Oferecemos casas modernas e sustentáveis utilizando painéis de EPS, reduzindo o impacto ambiental e os custos da construção.">
        <meta property="og:image" content="https://casafacileps.com.br/imagens/hero-whats.png">
        <meta property="og:url" content="https://casafacileps.com.br/">
        <meta property="og:type" content="website">
        <meta property="og:site_name" content="Casa Fácil EPS">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/imagens/Logo header - Casa Fácil EPS.png" alt="Logo"class="w-75" /> 
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>
                            </li>
                        }

                        <li class="nav-item px-4" data-aos="zoom-in-right" data-aos-duration="1500">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">início</a>
                        </li>
                        <li class="nav-item  px-4" data-aos="zoom-in-right" data-aos-duration="1600">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Eps">EPS</a>
                        </li>
                        <li class="nav-item  px-4" data-aos="zoom-in-right" data-aos-duration="1700">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contato">Contatos</a>
                        </li>
                        
                        <li class="nav-item  px-4" data-aos="zoom-in-right" data-aos-duration="1700">
                            @await Html.PartialAsync("_LogoutPartial")
                        </li>
                    </ul>
                </div>
               
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3 mb-5">
            @RenderBody()
        </main>
    </div>

    <footer class=" footer">
        @await Html.PartialAsync("_LayoutFooter")
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
