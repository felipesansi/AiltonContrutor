@model CasaFacilEPS.Models.Categoria

@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<h1 class="mb-4">Detalhes da Categoria</h1>

<div class="card shadow-sm p-4">
    <h4 class="mb-3">Informações da Categoria</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.CategoriaId" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Voltar à Lista</a>
</div>
