@model IEnumerable<CasaFacilEPS.Models.Categoria>

@{
    ViewData["Title"] = "Categoria";
}

<h2 class="mb-5">Lista de Categorias</h2>

<p class="mt-4">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Adicionar categoria
    </a>
</p>



<div class="row" >
    @foreach (var item in Model)
{
    <div class="col-md-6 col-lg-4 mb-4" >
        <div class="card shadow-sm">
            <div class="card-header bg-black text-white">
                <div class="card-title">@item.CategoriaNome</div>
            </div>
           
            <div class="card-body">
                <p><strong>Descrição:</strong> @item.Descricao</p>
             </div>
            <div class="card-footer text-center">
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.CategoriaId">Editar</a>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.CategoriaId">Detalhes</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.CategoriaId">Excluir</a>
            </div>
        </div>
    </div>
}
  </div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">