@model CasaFacilEPS.Models.Categoria

@{
    ViewData["Title"] = "Excluir Categoria";
}

<h1 class="mb-4">Excluir Categoria</h1>

<div class="card shadow-sm p-4">
    <h4 class="mb-3">Você tem certeza que deseja excluir esta categoria?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
</div>

<div class="mt-3">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CategoriaId" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
    </form>
</div>
