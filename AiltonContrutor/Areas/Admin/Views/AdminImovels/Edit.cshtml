@model AiltonConstrutor.Models.Imovel

@{
    ViewData["Title"] = "Editar Imóvel";
}

<h1 class="mb-4 text-primary">Editar Imóvel</h1>

<div class="card shadow-sm p-4">
    <h4 class="mb-3 text-secondary">Detalhes do Imóvel</h4>
    <hr />
    <div class="row">
        <div class="col-lg-6 col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
                <input type="hidden" asp-for="IdImovel" />

                <!-- Título -->
                <div class="mb-3">
                    <label asp-for="Titulo" class="form-label fw-bold">Título do Imóvel</label>
                    <input asp-for="Titulo" class="form-control" placeholder="Digite o título do imóvel" required />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <!-- Descrição -->
                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label fw-bold">Descrição</label>
                    <input asp-for="Descricao" class="form-control" placeholder="Digite uma descrição do imóvel" required />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <!-- Quartos -->
                <div class="mb-3">
                    <label asp-for="Quartos" class="form-label fw-bold">Número de Quartos</label>
                    <input asp-for="Quartos" class="form-control" placeholder="Quantos quartos?" required />
                    <span asp-validation-for="Quartos" class="text-danger"></span>
                </div>

                <!-- Banheiros -->
                <div class="mb-3">
                    <label asp-for="Banheiros" class="form-label fw-bold">Número de Banheiros</label>
                    <input asp-for="Banheiros" class="form-control" placeholder="Quantos banheiros?" required />
                    <span asp-validation-for="Banheiros" class="text-danger"></span>
                </div>

                <!-- Características -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Características</label>
                    <div class="form-check">
                        <input class="form-check-input" asp-for="AreaGourmet" />
                        <label class="form-check-label">Área Gourmet</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Churrasqueira" />
                        <label class="form-check-label">Churrasqueira</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Piscina" />
                        <label class="form-check-label">Piscina</label>
                    </div>
                </div>

                <!-- Valor -->
                <div class="mb-3">
                    <label asp-for="Valor" class="form-label fw-bold">Valor</label>
                    <input asp-for="Valor" class="form-control" placeholder="Informe o valor do imóvel" required />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>

                <!-- Imagem URL -->
                <div class="mb-3">
                    <label asp-for="ImagemUrl" class="form-label fw-bold">URL da Imagem</label>
                    <input asp-for="ImagemUrl" class="form-control" placeholder="Cole a URL da imagem" required />
                    <span asp-validation-for="ImagemUrl" class="text-danger"></span>
                </div>

                <!-- Imagem Thumbnail -->
                <div class="mb-3">
                    <label asp-for="ImagemThumbnailUrl" class="form-label fw-bold">URL da Thumbnail</label>
                    <input asp-for="ImagemThumbnailUrl" class="form-control" placeholder="Cole a URL da thumbnail" />
                    <span asp-validation-for="ImagemThumbnailUrl" class="text-danger"></span>
                </div>

                <!-- Status -->
                <div class="mb-3">
                    <label asp-for="StatusImovel" class="form-label fw-bold">Status do Imóvel</label>
                    <input asp-for="StatusImovel" class="form-control" placeholder="Informe o status do imóvel" required />
                    <span asp-validation-for="StatusImovel" class="text-danger"></span>
                </div>

                <!-- Metragem -->
                <div class="mb-3">
                    <label asp-for="MetragemImovel" class="form-label fw-bold">Metragem do Imóvel</label>
                    <input asp-for="MetragemImovel" class="form-control" placeholder="Informe a metragem" required />
                    <span asp-validation-for="MetragemImovel" class="text-danger"></span>
                </div>

                <!-- Endereço -->
                <div class="mb-3">
                    <label asp-for="Endereco" class="form-label fw-bold">Endereço</label>
                    <input asp-for="Endereco" class="form-control" placeholder="Informe o endereço" required />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>

                <!-- Categoria -->
                <div class="mb-3">
                    <label asp-for="CategoriaId" class="form-label fw-bold">Categoria</label>
                    <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.CategoriaId" required>
                        <option value="">Selecione uma categoria</option>
                    </select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>

                <!-- Botão de Salvar -->
                <div class="mb-3">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary">Voltar à Lista</a>
</div>
